<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9a9a9"
    tools:context=".OtherViewActivity" >

    <io.vov.vitamio.widget.CenterLayout
        android:id="@+id/centerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <io.vov.vitamio.widget.VideoView
            android:id="@+id/vitamio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </io.vov.vitamio.widget.CenterLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:id="@+id/buffer_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/centerLayout"
        android:layout_marginLeft="12dp"
        android:textColor="#1d0a1a" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:id="@+id/net_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/centerLayout"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/buffer_percent"
        android:textColor="#0804d6" />


</RelativeLayout>
